<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifpe.pdm.cardapiolanches" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MenuCliente"
            android:label="@string/title_activity_menu_cliente" >
        </activity>
        <activity
            android:name=".Ofertas"
            android:label="@string/title_activity_ofertas" >
        </activity>
        <activity
            android:name=".Pedidos"
            android:label="@string/title_activity_pedidos" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard" >
            <intent-filter>
                <action android:name="br.edu.ifpe.pdm.cardapiolanches.Dashboard" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OfertasProdutosListActivity"
            android:label="@string/title_activity_ofertas" >
            <intent-filter>
                <action android:name="br.edu.ifpe.pdm.cardapiolanches.OfertasProdutosListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProdutosListActivity"
            android:label="@string/title_activity_produtos_list" >
            <intent-filter>
                <action android:name="br.edu.ifpe.pdm.cardapiolanches.ProdutosListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PedidosListActivity"
            android:label="@string/title_activity_pedidos_list" >
            <intent-filter>
                <action android:name="br.edu.ifpe.pdm.cardapiolanches.PedidosListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PedidosConfirmardosListActivity"
            android:label="@string/title_activity_pedidos_confirmardos_list" >
            <intent-filter>
                <action android:name="br.edu.ifpe.pdm.cardapiolanches.PedidosConfirmardosListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckoutPedidosActivity"
            android:label="@string/title_activity_checkout_pedidos" >
            <intent-filter>
                <action android:name="br.edu.ifpe.pdm.cardapiolanches.CheckoutPedidosActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome_Activity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectActivity"
            android:label="@string/title_activity_select"
            android:parentActivityName=".Welcome_Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.ifpe.pdm.cardapiolanches.Welcome_Activity" />
        </activity>
    </application>

</manifest>
